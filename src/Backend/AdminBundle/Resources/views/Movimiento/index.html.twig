{% extends '::backend.html.twig' %}

{% block container %}
    
    
        <h4>Listado de Movimientos </h4>

<div class="row-fluid">
  
  
  <div class="span2">  {% if is_granted("ROLE_ADDMOV") %} <button class="btn btn-primary" type="button" id="new_button" data-url="{{ path('movimiento_new') }}" >Nuevo Movimiento</button> {% endif %} </div>
  
    <div class="span3">
     
    <form id="custom-search-form" class="form-search form-horizontal pull-right" action="#">
      <div class="input-append span12">
      <input type="text" class="search-query" name="search-query" id="search-query" placeholder="Buscar" value="{{ search }}">
      <button type="button" id="search-button" class="btn" data-url="{{ path('movimiento') }}" ><i class="icon-search"></i></button>
      </div>
      </form>
    
    
    
    </div>
    
     <div class="span2">
          {% if is_granted("ROLE_VIEWARTICULO") %} <button class="btn btn-primary" type="button" id="exportar_button" data-url="{{ path('movimiento_exportar') }}" >Exportar </button> {% endif %}
    </div>
    
 </div>
    
    
    
    
    <div class="well">
    <table class="table">
    <thead>
    <tr>
     <th>Fecha</th>
     <th>Documento</th>
    <th>Deposito Origen</th>
    <th>Deposito Destino</th>
    <th>Estado</th>
    <th>Observaciones</th>
    <th style="width: 86px;">Acciones</th>
    </tr>
    </thead>
    <tbody>
     {% for movimiento in pagination %}
    
     <tr>
          <td>{{ movimiento.createdAt |date('d-m-Y ') }}</td>
          <td>{{ movimiento.documento }}</td>
          <td>{{ movimiento.depositoOrigen.getNombre }}</td>
          <td>{{ movimiento.depositoDestino.getNombre }}</td>
          <td>
			  {% if movimiento.estado.id == 1 %}                    
                    <span class="label label-warning">{{ movimiento.estado.name }}</span>                    
              {% endif %}                   
			  {% if movimiento.estado.id == 2 %}                                 
					<span class="label label-success">{{ movimiento.estado.name }}</span>					
			  {% endif %}				  
			  {% if movimiento.estado.id == 3 %}                                    
					<span class="label label-important">{{ movimiento.estado.name }}</span>					
			  {% endif %}  	
          </td>
          <td>{{ movimiento.observaciones }}</td> 
          <td>
              {% if is_granted("ROLE_MODORDENING") %}
                <a href="{{ path('movimiento_edit', { 'id': movimiento.id }) }}"><i class="icon-pencil"></i></a>
              {% endif %}
              {% if is_granted("ROLE_MODORDENING") %}
					{% if movimiento.estado.id == 1 %}
					<a href="{{ path('movimientoParte_toaceptado', { 'id': movimiento.id }) }}"><i class="icon-ok"></i></a>
					{% endif %}
                {% endif %}                
                {% if is_granted("ROLE_MODORDENING") %}
					{% if movimiento.estado.id != 2 and movimiento.estado.id != 3  %}
						<a href="{{ path('movimientoParte_torechazado', { 'id': movimiento.id }) }}"><i class="icon-remove"></i></a>
                	{% endif %}
                {% endif %}
                {% if is_granted("ROLE_MODORDENING") %}
                		<a href="{{ path('movimiento_detail',{ 'id': movimiento.id }) }}"><i class="icon-eye-open"></i></a>
				{% endif %}
				{% if is_granted("ROLE_MODORDENING") %}
				<a href="{{ path('movimiento_print', { 'id': movimiento.id }) }}"><i class="icon-print"></i></a>
                {% endif %}
           </td>
    </tr>
    
    {% endfor %}
   
    </tbody>
    </table>
    </div>
    
    <div class="pagination">
     {{ knp_pagination_render(pagination) }}
    
    </div>
    
    <div class="modal small hide fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
     <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Confirmar Borrado</h3>
     </div>
     <div class="modal-body">
       <p class="error-text">Esta seguro que desea borrar los datos del movimiento?</p>
     </div>
     <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
      <button class="btn btn-danger " data-id="0"  data-url="{{ path('movimiento_delete', { 'id': 'id' }) }}">Borrar</button>
     </div>
    </div>
    
    
    <form action="" id="delete-form" method="post" {{ form_enctype(delete_form) }}>
    {{ form_widget(delete_form) }}
    <input type="hidden" value="DELETE" name="_method">
    
    </form>
    
    
    {% endblock %}
  {% block javascripts %}
  {{ parent() }}
 
{% javascripts '@BackendAdminBundle/Resources/public/js/search_index.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% javascripts '@BackendAdminBundle/Resources/public/js/exportar_entidad.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}      
  
{% endblock %}


